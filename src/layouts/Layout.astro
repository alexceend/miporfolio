---
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content="Alex's Portfolio - Software Developer showcasing projects in Unity, Java, Python, and more" />
		<meta name="keywords" content="software developer, portfolio, Unity, Java, Python, web development" />
		<meta name="author" content="Alex" />
		
		<!-- Open Graph / Social Media -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Alex's Portfolio - Software Developer showcasing projects in Unity, Java, Python, and more" />
		<meta property="og:type" content="website" />
		<meta property="og:image" content="/preview-card.webp" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="Alex's Portfolio - Software Developer showcasing projects in Unity, Java, Python, and more" />
		<meta name="twitter:image" content="/preview-card.webp" />
		
		<!-- Theme Color for browsers -->
		<meta name="theme-color" content="#4a90e2" />
		
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gradient-to-b from-primary-light to-primary h64 w-full">
		<slot />
	</body>
</html>
